<ListBoxItem x:Class="GraphSynth.UserRandLindChoose.UserChooseWindowItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bc="clr-namespace:GraphSynth.UserRandLindChoose">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="30" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Background="#ffefefef" TextAlignment="Center" Name="txtBOptionString" />
        <bc:RuleNoTextBlock Background="#ffefefff" Grid.Column="1" TextAlignment="Center" x:Name="txtBRuleNo" />
        <bc:LocationTextBlock Background="#ffefffef" Grid.Column="2" TextAlignment="Center" x:Name="txTBLocation" />
        <TextBlock Grid.Column="3" Background="#fffff8f8" TextAlignment="Center" Name="txtBConfluenceString" />
    </Grid>
</ListBoxItem>
