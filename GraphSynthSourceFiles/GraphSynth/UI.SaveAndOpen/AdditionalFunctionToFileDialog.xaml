<Window x:Class="GraphSynth.UI.AdditionalFunctionToFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" SizeToContent="WidthAndHeight" KeyUp="Window_KeyUp_1" >
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <StackPanel Name="listPanel" Orientation="Vertical"/>
        </Grid>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Button Name="btnOK" Content="OK" Width="40" Margin="0,0,0,5" Click="btnOK_Click"   />
            <Button Name="btnCancel" Content="Cancel" Margin="5,0,0,5" Width="50" Click="btnCancel_Click" />
        </StackPanel>
          </Grid>
</Window>
