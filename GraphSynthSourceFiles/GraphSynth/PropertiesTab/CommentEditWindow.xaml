<Window x:Class="GraphSynth.UI.CommentEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CommentEditWindow" Height="184" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="txtComment" Grid.Row="0" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                  AcceptsReturn="True" IsUndoEnabled="True"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="Cancel_Button_Click">Cancel</Button>
            <Button Click="Enter_Button_Click">Enter</Button>
        </StackPanel>
    </Grid>
</Window>
